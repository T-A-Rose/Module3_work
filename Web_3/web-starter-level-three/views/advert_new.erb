<h1> Add new advert!</h1>

<form action="/advert" method="POST">
  <p>
    <label for="species">Species</label>
    <br>
    <input type="text" id="species" name="species">
  </p>
  <p>
    <label for="animal_name">Animals name</label>
    <br>
    <input type="text" id="animal_name" name="animal_name">
  </p>
  <p>
    <label for="colour">Animal colour</label>
    <br>
    <input type="text" id="colour" name="colour">
  </p>
  <p>
    <label for="owner_name">Owners name</label>
    <br>
    <input type="text" id="owner_name" name="owner_name">
  </p>
  <p>
    <label for="owner_ci">Owners contact number</label>
    <br>
    <input type="text" id="owner_ci" name="owner_ci">
  </p>
  <p>
    <label for="animal_found">Animal found? </label>
    <br>
    <input type="text" id="animal_found" name="animal_found">
  </p>
  <p>
    <label for="adv_pass">Password for accessing advert</label>
    <br>
    <input type="password" id="adv_pass" name="adv_pass" minlength="4" required>
  </p>

  <input type="submit" value="Add advert">
</form>
